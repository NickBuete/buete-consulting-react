# =============================================
# PRODUCTION ENVIRONMENT (Supabase)
# =============================================
# Copy this to .env.production for production deployment
# This uses your Supabase PostgreSQL database

# ===========================================
# DATABASE - Supabase PostgreSQL
# ===========================================
# Get this from: Supabase Dashboard → Settings → Database → Connection String
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# Direct connection (for migrations only, not for pooling)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=4000
NODE_ENV=production

# ===========================================
# AUTHENTICATION
# ===========================================
# CRITICAL: Generate a NEW secure random string for production
# Use: openssl rand -base64 32
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS"

# ===========================================
# AWS BEDROCK CONFIGURATION
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-access-key

BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.3

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Your production Vercel domain (update after deployment)
ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-domain.com

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
